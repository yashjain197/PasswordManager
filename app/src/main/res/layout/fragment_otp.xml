<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    >

    <TextView
        android:id="@+id/verifyPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify +91-123456789"
        style="@style/Maintext"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Enter OTP to verify your phone number"
       style="@style/hint"
        app:layout_constraintEnd_toEndOf="@+id/verifyPhone"
        app:layout_constraintStart_toStartOf="@+id/verifyPhone"
        app:layout_constraintTop_toBottomOf="@+id/verifyPhone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:padding="8dp"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:id="@+id/in1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                ></EditText>

            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:id="@+id/in2"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                ></EditText>

            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:id="@+id/in3"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                ></EditText>

            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:id="@+id/in4"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                ></EditText>
            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:id="@+id/in5"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                ></EditText>

            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:id="@+id/in6"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                ></EditText>




        </LinearLayout>

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/textbox_outline"
            android:text="Verify"
            android:textColor="#ffffff"
             />

        <TextView
            android:id="@+id/wrongPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Another phone number?"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            style="@style/hint"></TextView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>