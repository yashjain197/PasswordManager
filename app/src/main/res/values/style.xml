<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Maintext" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFF7</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="toolbar" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pacificoregular</item>

    </style>

    <style name="hint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#D3D3D3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PasswordDataLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">
            @color/box_stroke_color
        </item>
    </style>


    <style name="ButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/textbox_outline</item>

    </style><style name="ButtonStyleUnselected" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/unselected_btn</item>
    </style>

    <style name="Switch">
            <item name="colorControlActivated">@color/bluePurp</item>
    </style>

</resources>